# DAO Deployer - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=development
PORT=3000
HOSTNAME=0.0.0.0

# =============================================================================
# Blockchain RPC URLs
# =============================================================================
# Mainnet
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
# Or use Alchemy
# ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Base
BASE_RPC_URL=https://base-mainnet.infura.io/v3/YOUR_INFURA_KEY
# BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY
# POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Arbitrum
ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_INFURA_KEY
# ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Optimism
OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/YOUR_INFURA_KEY
# OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# =============================================================================
# API Keys
# =============================================================================
# Infura (https://infura.io)
INFURA_API_KEY=your_infura_api_key_here

# Alchemy (https://alchemy.com)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# WalletConnect (https://cloud.walletconnect.com)
WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id_here

# =============================================================================
# IPFS Configuration
# =============================================================================
# Pinata (https://pinata.cloud)
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

# NFT.Storage (https://nft.storage)
NFT_STORAGE_API_KEY=your_nft_storage_api_key_here

# Local IPFS (if running locally)
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# =============================================================================
# Render Deployment (CI/CD)
# =============================================================================
# Get these from your Render dashboard (https://dashboard.render.com)
RENDER_API_KEY=your_render_api_key_here
RENDER_STAGING_SERVICE_ID=your_staging_service_id_here
RENDER_PRODUCTION_SERVICE_ID=your_production_service_id_here

# =============================================================================
# Security
# =============================================================================
# Generate a strong random string for session secrets
SESSION_SECRET=your_random_session_secret_here_min_32_chars

# CORS origins (comma-separated for multiple)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# Monitoring (Optional)
# =============================================================================
# Sentry DSN for error tracking (https://sentry.io)
SENTRY_DSN=your_sentry_dsn_here

# Log level (debug, info, warn, error)
LOG_LEVEL=info
